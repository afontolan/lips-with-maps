<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrey700</item>
        <item name="colorPrimaryDark">@color/colorGrey900</item>
        <item name="colorAccent">@color/colorAccentLightBlue200</item>
        <item name="android:windowBackground">@color/colorGrey50</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GetLocationActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorGreen700</item>
        <item name="colorPrimaryDark">@color/colorGreen900</item>
        <item name="colorAccent">@color/colorAccentBlue200</item>
        <item name="android:windowBackground">@color/colorGreen50</item>
    </style>

    <style name="WifiScannerActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorBrown700</item>
        <item name="colorPrimaryDark">@color/colorBrown900</item>
        <item name="colorAccent">@color/colorAccentRed200</item>
        <item name="android:windowBackground">@color/colorBrown50</item>
    </style>
</resources>
